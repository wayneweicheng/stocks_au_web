# SQL Server connection
sql_server_host=
sql_server_port=1433
sql_server_database=
sql_server_user=
sql_server_password=

# Frontend origin(s) for CORS, comma-separated
allowed_origins=http://localhost:3100

# Authentication credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password123

# Charts base directory (local path to prefix ChartPath when serving via /charts)
# Examples:
#   CHART_BASE_DIR=C:\\pattern_charts\\
#   CHART_BASE_DIR=\\\\fileserver\\charts\\
# Backward compatible key names: CHART_BASE_DIR or CHART_BASE_URL
CHART_BASE_DIR=

# IB Gateway automation
# Path to IB Gateway executable (e.g., C:\IB\IBGateway\1013\ibgateway.exe)
# Only required if not using IBC integration
IBG_EXE_PATH=
# Credentials used to auto-fill login form (only needed if not using IBC)
IBG_USERNAME=
IBG_PASSWORD=
# Seconds to wait after killing existing IBG instance before restart
IBG_WAIT_AFTER_KILL_SECONDS=10

# IBC Integration (RECOMMENDED for unattended/automated operation)
# IBC (IBController) is the industry-standard solution for automating IB Gateway login
# Advantages:
#   - Works without active desktop session (no UI Automation required)
#   - More reliable than screen automation
#   - Handles login automatically using IBC's config.ini
# Setup:
#   1. Install IBC from https://github.com/IbcAlpha/IBC
#   2. Configure credentials in IBC's config.ini (usually C:\Users\<user>\Documents\IBC\config.ini)
#   3. Set IBG_USE_IBC_SCRIPT=true and IBG_IBC_SCRIPT_PATH to StartGateway.bat location
# If false, uses direct launch with UI Automation (requires active desktop)
IBG_USE_IBC_SCRIPT=false
IBG_IBC_SCRIPT_PATH=

# IB API status probe (host/port). If set, status checks this exact endpoint.
# Example: IBG_API_HOST=192.168.20.102
#          IBG_API_PORT=7496
IBG_API_HOST=
IBG_API_PORT=

# IB Gateway UI preferences
# IBG_TRADING_MODE=Live or Paper
IBG_TRADING_MODE=Live

# Optional: enable a foreground typing fallback when UIA automation fails
# Set to true only if you understand the risks of sending keystrokes to the foreground window.
# Default is false for safety.
IBG_ALLOW_FALLBACK_TYPING=

# Optional calibration (relative window coords 0..1). If set, automation clicks these exact points.
# Example: 0.52 means 52% of window width from left; 0.45 means 45% of height from top.
IBG_USERNAME_X_PCT=
IBG_USERNAME_Y_PCT=
IBG_PASSWORD_X_PCT=
IBG_PASSWORD_Y_PCT=